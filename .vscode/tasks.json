{
    "tasks": [
        {
            "label": "Qemu Debug", // 任务的名字，可以随便起
            "type": "shell",
            "command": "make debug",      // 每次启动调试前要执行的命令
            "isBackground": true,    // 【必须】告诉 VS Code 这是后台任务
            // 【精简版匹配器】
            "problemMatcher": {
                "pattern": { "regexp": "^$" }, // 必须保留的空匹配（占位符）
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",      // 只要有任何字符输出...
                    "endsPattern": "."         // ...就视为启动成功
                }
            }
            // presentation 块已删除，使用默认设置（会自动显示终端）
        }
    ]
}